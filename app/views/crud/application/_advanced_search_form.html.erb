<%= content_tag(:div, class: "panel panel-default") do %>
  <div class="panel-body">
    <%= simple_form_for resource, wrapper: :horizontal_form, html: { class: "form-horizontal" }, method: "GET", url: "", remote: @remote do |f| %>
      <% stored_params(:container, :sort_key, :sort_order, :per).each do |key, value| %>
        <%= hidden_field_tag key, value %>
      <% end %>
      <% columns_for_advanced_search.each do |column| %>
        <%= advanced_search_input f, column %>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button id="advanced-search-button" type="submit" class="btn btn-primary">
            <i class="glyphicon glyphicon-search"></i> <%= t("crud.action.advanced_search") %>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
