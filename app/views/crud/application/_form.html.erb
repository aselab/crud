<%= crud_form resource do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <% columns.each do |column| %>
      <%= simple_form_input f, column %>
    <% end %>
  </div>
  <% unless @skip_form_actions %>
    <div class="form-actions">
      <%= f.button :submit, @submit_label, :class => "btn btn-primary" %>
      <%= link_to t("crud.action.cancel"), stored_params(:action => :index), :class => "btn btn-cancel" %>
    </div>
  <% end %>
<% end %>
