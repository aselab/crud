<div class="card-body">
  <div class="row mb-3">
    <div class="col-sm-7">
      <h4 class="card-title mb-0"><%= @title %></h4>
    </div>
    <div class="col-sm-5">
      <div class="mr-auto">
      </div>
    </div>
  </div>
  <dl class="dl-horizontal">
  <% columns.each do |column| %>
    <dt><%= model.human_attribute_name(column) %></dt>
    <dd><%= column_html(resource, column) %></dd>
  <% end %>
  </dl>
</div>